<div class="row">
    <main class="col-md-12">
        <!-- Start your code here -->
        <form method="POST" action="/courses/add">
            <fieldset>
                <legend>Course Information</legend>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="courseCode">Course Code:</label>
                            <input class="form-control" name="courseCode" type="text" id="courseCode" required />
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="courseDescription">Course Description:</label>
                            <input class="form-control" name="courseDescription" type="text" id="courseDescription" required />
                        </div>
                    </div>
                </div>
            </fieldset>
            <hr />
            <input type="submit" class="btn btn-success float-right" value="Add Course" /><br /><br /><br />
        </form>
    </main>
</div>
