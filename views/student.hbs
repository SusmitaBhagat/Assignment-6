

<div class="row">
    <main class="col-md-12">
        <h2>{{viewData.student.firstName}} {{viewData.student.lastName}}</h2>
        <hr />
        <form method="POST" action="/student/update">
            <input type="hidden" name="studentNum" value="{{viewData.student.studentNum}}" />
            <fieldset>
                <legend>Personal Information</legend>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>First Name:</label>
                            <input class="form-control" name="firstName" type="text" value="{{viewData.student.firstName}}" required />
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Last Name:</label>
                            <input class="form-control" name="lastName" type="text" value="{{viewData.student.lastName}}" required />
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label>Email:</label>
                            <input class="form-control" name="email" type="email" value="{{viewData.student.email}}" required />
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label>Address (Street):</label>
                            <input class="form-control" name="addressStreet" type="text" value="{{viewData.student.addressStreet}}" required />
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label>Address (City):</label>
                            <input class="form-control" name="addressCity" type="text" value="{{viewData.student.addressCity}}" required />
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label>Address (Province):</label>
                            <input class="form-control" name="addressProvince" type="text" value="{{viewData.student.addressProvince}}" required />
                        </div>
                    </div>
                </div>
            </fieldset>
            <fieldset>
                <legend>Academic Information</legend>
                <div class="row">
                    <div class="col-md-4">
                        <label>College Employment:</label><br />
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="TA" name="TA" {{#if viewData.student.TA}} checked {{/if}}>
                            <label class="form-check-label" for="TA">
                                Teaching Assistant
                            </label>
                        </div>
                        <br />
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label>Enrollment Status:</label><br />
                            <label class="checkbox-inline">
                                <input type="radio" name="status" value="Full Time" {{#if (eq viewData.student.status "Full Time")}} checked {{/if}} required /> Full Time
                            </label>
                            <label class="checkbox-inline">
                                <input type="radio" name="status" value="Part Time" {{#if (eq viewData.student.status "Part Time")}} checked {{/if}} required /> Part Time
                            </label>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="course">Enrolled in Course:</label>
                            {{#if viewData.courses}}
                              <select class="form-select" name="course" id="course" required>
                                  <option value="">Select Course</option>
                                  {{#each viewData.courses}}
                                    <option value="{{courseId}}" {{#if selected}} selected {{/if}}>{{courseCode}}</option>
                                  {{/each}}
                              </select>
                            {{else}}
                              <div>No Courses</div>
                            {{/if}}
                        </div>
                    </div>
                </div>
            </fieldset>
            <hr />
            <input type="submit" class="btn btn-primary float-right" value="Update Student" /><br /><br /><br />
        </form>
    </main>
</div>


